@page "{id:int}"
@model UniBazaarLite.Pages.Events.RegisterModel
@{
    ViewData["Title"] = "Register for Event";
}

<h2>Register for @Model.Event?.Title</h2>

<p>@Model.Event?.Description</p>
<p><strong>Date:</strong> @Model.Event?.Date.ToShortDateString()</p>

<form method="post">
    <button type="submit">Confirm Registration</button>
</form>
