@page
@model UniBazaarLite.Pages.Events.CreateModel
@{
    ViewData["Title"] = "Create Event";
}

<h2>Create Event</h2>

<form method="post">
    <div>
        <label asp-for="Input.Title">Title</label>
        <input asp-for="Input.Title" />
        <span asp-validation-for="Input.Title"></span>
    </div>
    <div>
        <label asp-for="Input.Description">Description</label>
        <textarea asp-for="Input.Description"></textarea>
        <span asp-validation-for="Input.Description"></span>
    </div>
    <div>
        <label asp-for="Input.Date">Date</label>
        <input asp-for="Input.Date" type="date" />
        <span asp-validation-for="Input.Date"></span>
    </div>
    <button type="submit">Create</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
