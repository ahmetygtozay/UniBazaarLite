@inject Microsoft.Extensions.Options.IOptions<UniBazaarLite.Models.SiteSettings> SiteSettings

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@SiteSettings.Value.SiteName</title>
    <h1>@SiteSettings.Value.SiteName</h1>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UniBazaarLite.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <a asp-page="/Index">Home</a> |
            <a asp-page="/Events/Index">Events</a> |
            <a asp-controller="Items" asp-action="Index">Items</a> |
            <a asp-page="/Contact">Contact</a>
        </nav>

        <hr />

    </header>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - UniBazaarLite - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>